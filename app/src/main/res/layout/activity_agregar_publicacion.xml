<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarPublicacion"
    android:orientation="vertical"
    android:background="@drawable/fondo_todo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/nueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/nuevap"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/inputnegro"
            android:hint="@string/t_tulo"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/inputcuadrado"
            android:hint="@string/descrip"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine"
            android:importantForAutofill="no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDireccionAdd"
                android:layout_width="140dp"
                android:layout_height="43dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:paddingEnd="10dp"
                android:text="@string/direcci_n"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMapa"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_input_add"
                android:gravity="center"
                android:onClick="MostrarMapa" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_de_publicaci_n"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="174dp"
                android:layout_height="30dp"
                android:background="@color/Blanco"


                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFotosAdd"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:gravity="start"
                android:text="@string/addFotos"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnFotos"
                android:layout_width="32dp"
                android:layout_height="31dp"
                android:background="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_input_add"
                android:gravity="left"
                android:onClick="ObtenerFotos"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTelAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:paddingStart="10dp"
                android:gravity="start"
                android:text="@string/tel"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnagreCel"
                android:layout_width="32dp"
                android:layout_height="31dp"
                android:background="@android:color/transparent"
                android:drawableStart="@android:drawable/ic_input_add"
                android:gravity="start"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
                tools:ignore="UselessParent">

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/boton_publicacion"
                android:drawableLeft="@android:drawable/ic_menu_add"
                android:onClick="btnGuardar"
                android:drawableStart="@android:drawable/ic_menu_add"
                android:text="@string/agregar_publicaci_n"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/botonrojo"
                    android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                    android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                    android:text="@string/cancelar"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginTop="15dp">

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/boom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_margin="20dp"
            app:boom_button_color="@color/naranja"
            app:boom_button_pressed_color="@color/azul"
            app:boom_inActionBar="false"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>



</LinearLayout>